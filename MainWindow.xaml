<Window x:Class="GlobalTime.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GlobalTime"
        mc:Ignorable="d"
        Title="GlobalTime" Height="150" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <ListView x:Name="TimeListView">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="City" Width="Auto" DisplayMemberBinding="{Binding City}" />
                    <GridViewColumn Header="Current Time" Width="Auto" DisplayMemberBinding="{Binding CurrentTime}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
